<div class="container">
  <div class="row">
    <div class="three columns">.</div>

    <div class="six columns">
      <h1>EAT-DA-BURGER!</h1>
    </div>

    <div class="three columns">.</div>
  </div>
</div>


<div class="container">
  <div class="row">

    <div class="four columns">

      <h4>BURGERS TO DEVOUR!</h4>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="four columns">

      <h4>ADD A BURGER TO THE LIST</h4>

      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">devoured?</label>
          <input type="radio" name="devoured" value="0" checked> not devoured<br>
          <input type="radio" name="devoured" value="1"> devoured

        </div>

        <button class="button-primary" type="submit">Add burger</button>

      </form>
    </div>


    <div class="four columns">
      <table class="u-full-width">


        <h4>BURGERS I'VE DEVOURED</h4>

        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>

    </div>
  </div>

</div>
